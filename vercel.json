{
  "version": 2,
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "outputDirectory": "wp/landing/build",
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/app", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/app/(.*)", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 